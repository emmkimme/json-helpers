{
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Run mocha",
                "type": "node",
                "request": "launch",
                "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
                "stopOnEntry": false,
           
                "sourceMaps": true,
           
                "args": [
                    // "test/**/serializeObjectTest.js",
                    "test/**/bijectiveJSONTest.js",
                    // "-g=Object", 
                    // "-g=Buffer", 
                    "--no-timeouts", 
                    "--recursive"
                ],
                "cwd": "${workspaceRoot}",
                "runtimeExecutable": null,
                "env": { "NODE_ENV": "testing"},
                "outFiles": [
                "${workspaceRoot}/lib/**/*.js",
                "!${workspaceRoot}/node_modules/**/*.js"
            ],
            }
        ]
    }